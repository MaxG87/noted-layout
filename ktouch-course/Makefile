ktouch-course.xml: ktouch-course.xml.raw
		sed -e 's/Generated by ktgen/Tippkurs f√ºr Noted (generiert von ktgen)/' \
		-e 's!Visit ktgen on Github (https://github.com/BarbieCue/ktgen)!Generiert von ktgen auf Basis des Neo2-Wikipediaartikels!' \
		$< > $@

ktouch-course.xml.raw: noted.xml
	docker run --rm \
		-v $$PWD:/files \
		barbiecue/ktgen:latest \
		/files/$< \
		-web 'https://de.wikipedia.org/wiki/Neo_(Tastaturbelegung)' \
		-o > $@

noted.xml: de.neo2.xml
	cat $< | ./mapping.pl > $@
